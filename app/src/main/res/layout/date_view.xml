<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="338.5dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/table_item_background"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/iran_sans_bold"
                android:textColor="@color/primaryUltraLightColor"
                android:gravity="center"
                android:textSize="@dimen/titleTextSize"
                android:background="@drawable/table_title_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:fontFamily="@font/iran_sans"
                    android:layoutDirection="ltr"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="15dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="-5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="start|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/dailyWorkingHours"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="end"
                    android:paddingEnd="15dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>