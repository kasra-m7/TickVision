<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/table_item_background"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="338.5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/table_title_background"
                android:fontFamily="@font/iran_sans_bold"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/dailyPerformance"
                android:textColor="@color/primaryUltraLightColor"
                android:textSize="@dimen/titleTextSize"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/img_tick"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/tick"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_receive"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:text="@string/receiveText"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_text_receive"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:layout_marginStart="-1.5dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_payment"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:text="@string/paymentText"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_text_payment"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:layout_marginStart="-1.5dp"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_profit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:textColor="@color/primaryColor"
                    android:text="@string/profitText"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_text_profit"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:layout_marginStart="-1.5dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_leftover"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:textColor="@color/primaryColor"
                    android:text="@string/leftoverText"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_text_leftover"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/table_item_background"
                    android:fontFamily="@font/iran_sans"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:layout_marginStart="-1.5dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/normalTextSize"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>